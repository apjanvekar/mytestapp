<!DOCTYPE html>
<html>
<head>
  <title>UBI</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
      <div id="current_user">
            <% if session[:user_id]==nil%>  
            <% else %>  
                  <%@user=User.find(session[:user_id])%>
                  login as <%=@user.username%><%= link_to "Log out", log_out_path %>  
            <% end %>  
       </div> 
       <div id="message">
            <% flash.each do |name, msg| %>  
                     <%= content_tag :div, msg, :id => "flash#{name}" %>  
            <% end %> 
       </div>

<%= yield %>

</body>
</html>